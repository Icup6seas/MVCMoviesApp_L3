@model MVCMoviesApp.MovieModel
@{
    ViewBag.Title = "New Movie Form";
}

<h2>New Movie Form</h2>
<form name="newMovie" method="post">
    <p>Title: <input type="text" name="Title" id="Title" /></p>
    <p>Director: <input type="text" name="Director" id="Director" /></p>
    <p>Year Released: <input type="number" min="1850" max="2020" name="YearRelease" id="YearRelease" </p>
    <p>
        Is this currently in my collection? (choose an option)<select name="InCollection" id="InCollection">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </p>
    <input type="submit" value="Submit Movie" />
</form>
